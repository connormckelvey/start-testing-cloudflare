{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "@cloudflare/workers-types",
      "@types/node",
    ]
  },
  "include": [
    "scripts",
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
