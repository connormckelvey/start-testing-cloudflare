{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true, 
    "module": "ES2020",
    "target": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "types": [
      "@cloudflare/workers-types",
      "@types/node",
    ],
    "baseUrl": ".",
    "paths": {
      "start-testing-cloudflare": ["../"]
    }
  },
  "include": ["scripts", "src", "test"],
  "exclude": ["node_modules", "dist"]
}
